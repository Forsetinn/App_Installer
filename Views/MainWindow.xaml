<ui:FluentWindow
    x:Class="AppInstaller.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
    Title="App Installer (Preview)"
    Icon="pack://application:,,,/appinstaller.ico"
    Width="900"
    Height="720"
    WindowStartupLocation="CenterScreen"
    ExtendsContentIntoTitleBar="True"
    Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="White">

    <!-- =====================================================
         ROW DEFINITIONS: 
         - Row 0 = TitleBar (Auto)
         - Row 1 = ListBox area (4* out of 10*)
         - Row 2 = Search controls (Auto)
         - Row 3 = DataGrid area (6* out of 10*)
         - Row 4 = Pagination buttons (Auto)
         - Row 5 = Action buttons (Auto)
         - Row 6 = Status text (Auto)
         ===================================================== -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- =======================================
             ROW 0: Custom TitleBar
             ======================================= -->
        <ui:TitleBar
            Grid.Row="0"
            Height="30"
            Margin="-10,-10,-10,0"
            VerticalAlignment="Top">
                    <ui:TitleBar.Header>
                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                    <Image Source="pack://application:,,,/appinstaller.ico" 
                           Width="16" 
                           Height="16" 
                           Margin="0,0,8,0"/>
                            <TextBlock Text="App Installer (Preview)" 
                               VerticalAlignment="Center"/>
                        </StackPanel>
                    </ui:TitleBar.Header>
        </ui:TitleBar>

        <!-- =======================================
             ROW 1: Predefined App List (40% height)
             ======================================= -->
        <Border
            Grid.Row="1"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="2"
            Margin="0,10,0,5"
            Background="#1F1927">

            <ListBox
                x:Name="AppListBox"
                SelectionMode="Extended"
                Background="Transparent"
                Foreground="White"
                FontSize="10"
                AlternationCount="2"
                VerticalContentAlignment="Center">

                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <!-- Reduce padding from 6,4 to 4,2 -->
                                    <Setter Property="Padding" Value="4,2"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontSize" Value="10"/>
                                    <!-- Add MinHeight to make items smaller -->
                                    <Setter Property="MinHeight" Value="22"/>

                                    <EventSetter
                            Event="PreviewMouseLeftButtonDown"
                            Handler="ListBoxItem_PreviewMouseLeftButtonDown"/>

                        <!-- =========== 2) Now declare your Triggers =========== -->
                        <Style.Triggers>
                            <!-- Even rows (AlternationIndex = 0) -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                <Setter Property="Background" Value="#1F1927"/>
                            </Trigger>

                            <!-- Odd rows (AlternationIndex = 1) -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#2A2636"/>
                            </Trigger>

                            <!-- Hover (IsMouseOver) -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A2D46"/>
                            </Trigger>

                            <!-- Selected -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#5E4DB2"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid VerticalAlignment="Center" Margin="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Column 0: CheckBox -->
                            <CheckBox
                                Grid.Column="0"
                                IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                VerticalAlignment="Center"
                                Margin="0,0,5,0"
                                Foreground="White"/>

                            <!-- Column 1: App Name -->
                            <TextBlock
                                Grid.Column="1"
                                Text="{Binding Name}"
                                VerticalAlignment="Center"
                                Foreground="White"
                                FontSize="12"/>

                            <!-- Column 2: Source -->
                            <TextBlock
                                Grid.Column="2"
                                Text="{Binding Source, StringFormat=' ({0})'}"
                                VerticalAlignment="Center"
                                Margin="5,0,0,0"
                                Foreground="#BBBBBB"
                                FontSize="8"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- =======================================
             ROW 2: Search Controls (Auto)
             ======================================= -->
        <Grid Grid.Row="2" Margin="0,10,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <ui:TextBox
                    x:Name="SearchBox"
                    PlaceholderText="Type to search…"
                    Height="30"
                    VerticalContentAlignment="Center"
                    Padding="5"
                    Margin="0,0,0,5"
                    KeyDown="SearchBox_KeyDown"/>

                <StackPanel Orientation="Horizontal">
                    <CheckBox
                        x:Name="SearchWingetCheck"
                        Content="Winget"
                        IsChecked="True"
                        Foreground="White"/>
                    <CheckBox
                        x:Name="SearchMSStoreCheck"
                        Content="MS Store"
                        IsChecked="True"
                        Margin="20,0,0,0"
                        Foreground="White"/>
                </StackPanel>
            </StackPanel>

            <ui:Button
                x:Name="SearchButton"
                Content="Search"
                Grid.Column="1"
                Height="31"
                Width="150"
                Appearance="Primary"
                Click="SearchButton_Click"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"/>
        </Grid>

        <!-- =======================================
             ROW 3: Results DataGrid (60%)
             ======================================= -->
        <Border
            Grid.Row="3"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="2"
            Margin="0,0,0,5"
            Background="#1F1927">

            <Grid>
                <DataGrid
                    x:Name="ResultsGrid"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    RowHeaderWidth="0"
                    GridLinesVisibility="None"
                    RowBackground="#211d2f"
                    AlternationCount="2"
                    Background="Transparent"
                    Foreground="White"
                    FontSize="12"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ColumnWidth="*"
                    CanUserResizeColumns="False">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="Gray"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="FontSize" Value="10"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name"    Binding="{Binding Name}"    Width="2*"/>
                        <DataGridTextColumn Header="ID"      Binding="{Binding Id}"      Width="3*"/>
                        <DataGridTextColumn Header="Source"  Binding="{Binding Source}"  Width="*"/>
                        <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <ProgressBar
                    x:Name="SearchProgressBar"
                    Height="4"
                    VerticalAlignment="Top"
                    IsIndeterminate="True"
                    Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- =======================================
             ROW 4: Pagination Buttons (Auto)
             ======================================= -->
        <StackPanel
            Grid.Row="4"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,0,0,10">
            <ui:Button
                x:Name="PrevPageButton"
                Content="Previous"
                Width="100"
                Margin="5,0"
                Appearance="Secondary"
                Click="PrevPageButton_Click"/>
            <TextBlock
                x:Name="PageInfoText"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Margin="10,0"
                Foreground="White"
                FontSize="10"/>
            <ui:Button
                x:Name="NextPageButton"
                Content="Next"
                Width="100"
                Margin="5,0"
                Appearance="Secondary"
                Click="NextPageButton_Click"/>
        </StackPanel>

        <!-- =======================================
             ROW 5: Action Buttons (Auto)
             ======================================= -->
        <DockPanel
            Grid.Row="5"
            LastChildFill="False"
            Margin="0,0,0,10">
            <ui:Button
                x:Name="AddButton"
                DockPanel.Dock="Left"
                Content="Add to List"
                Width="100"
                Margin="0,0,10,0"
                Appearance="Primary"
                Click="AddButton_Click"/>
            <ui:Button
                x:Name="RemoveButton"
                DockPanel.Dock="Left"
                Content="Remove Selected"
                Width="120"
                Margin="0,0,10,0"
                Appearance="Danger"
                Click="RemoveButton_Click"/>
            <ui:Button
                x:Name="InstallButton"
                DockPanel.Dock="Left"
                Content="Install Selected"
                Width="120"
                Margin="0,0,10,0"
                Appearance="Success"
                Click="InstallButton_Click"/>
            <ui:Button
                x:Name="ExportButton"
                DockPanel.Dock="Left"
                Content="Export List"
                Width="100"
                Margin="0,0,10,0"
                Appearance="Secondary"
                Click="ExportButton_Click"/>
            <ui:Button
                x:Name="ImportButton"
                DockPanel.Dock="Left"
                Content="Import List"
                Width="100"
                Margin="0,0,10,0"
                Appearance="Secondary"
                Click="ImportButton_Click"/>
        </DockPanel>

        <!-- =======================================
             ROW 6: Status Text (Auto)
             ======================================= -->
        <TextBlock
            x:Name="StatusText"
            Grid.Row="6"
            Text="Ready"
            TextWrapping="Wrap"
            Foreground="White"
            FontSize="10"/>
    </Grid>
</ui:FluentWindow>
